@model MealPlanner.Models.ViewModel.AddUserIngredientViewModel

@{
    ViewData["Title"] = "Lägg till ingrediens";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="AddUserIngredient" method="post">
    <div class="form-group">
        <label for="IngredientId">Ingrediens</label>
        <select asp-for="IngredientId" class="form-control" asp-items="@(new SelectList(Model.AvailableIngredients, "Id", "Name"))">
            <option value="">-- Välj ingrediens --</option>
        </select>
        <span asp-validation-for="IngredientId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Quantity"></label>
        <input asp-for="Quantity" type="number" min="1" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Lägg till</button>
    <a asp-action="MyIngredients" class="btn btn-secondary">Tillbaka</a>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
