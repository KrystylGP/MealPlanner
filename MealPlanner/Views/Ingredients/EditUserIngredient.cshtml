@model MealPlanner.Models.ViewModel.AddUserIngredientViewModel

@{
    ViewData["Title"] = "Redigera ingrediens";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="EditUserIngredient" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label for="IngredientId">Ingrediens</label>
        <select asp-for="IngredientId" class="form-control" asp-items="@(new SelectList(Model.AvailableIngredients, "Id", "Name"))" disabled>
        </select>
        <input type="hidden" asp-for="IngredientId" />
    </div>

    <div class="form-group">
        <label asp-for="Quantity">Antal</label>
        <input asp-for="Quantity" type="number" min="1" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Spara ändringar</button>
    <a asp-action="MyIngredients" class="btn btn-secondary">Avbryt</a>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
